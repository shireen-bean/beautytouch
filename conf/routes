# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /admin                      controllers.Application.admin()
GET     /login                      controllers.Application.login()
GET     /product                    controllers.ProductController.product()
GET     /productJson                controllers.ProductController.productJson(sku)
POST    /postProductImage           controllers.ProductController.postProductImage()
POST    /postProduct		        controllers.ProductController.postProduct()
GET     /productList                controllers.ProductList.productList()
GET     /productListJson            controllers.ProductList.productListJson()
GET     /logout                     controllers.Application.logout()
GET     /machineList                controllers.MachineList.machineList()
GET     /machineListJson            controllers.MachineList.machineListJson()
GET     /machine                    controllers.MachineController.machine()
GET     /machineJson                controllers.MachineController.machineJson(id)
GET     /brand                      controllers.BrandController.brand()
GET     /brandJson                  controllers.BrandController.brandJson(id)
GET     /brandList                  controllers.BrandList.brandList()
GET     /brandListJson              controllers.BrandList.brandListJson()
POST    /postBrandLogo              controllers.BrandController.postBrandLogo()
POST    /postBrand                  controllers.BrandController.postBrand()
GET     /checkoutProductSelect      controllers.Checkout.vendingMain(machineId)
GET     /vendingMain		        controllers.Checkout.vendingMain(machineId)
GET     /thankYou                   controllers.Checkout.thankYou()
GET     /receipt                    controllers.Checkout.receipt()
GET     /paymentFailed              controllers.Checkout.paymentFailed()
GET     /pay	                    controllers.Checkout.pay(productId)
GET     /processing 		        controllers.Checkout.processing()
GET     /vending 		        	controllers.Checkout.vending()
GET     /getTokenBT                 controllers.Checkout.getTokenBT()
GET     /processNonce               controllers.Checkout.processNonce(nonce,name,productId,machineId,column)
GET     /contactus	                controllers.Landing.contactUs()
GET     /terms		                controllers.Landing.terms()
POST    /postMachine		        controllers.MachineController.postMachine()
POST    /loginVending		        controllers.Application.loginVending()
POST    /machineStatus              controllers.MachineController.logStatus
POST    /sendSuggestion             controllers.Email.sendSuggestion()
POST    /sendEmailReceipt           controllers.Email.sendReceipt
POST    /sendSMSReceipt             controllers.SMS.sendReceipt
POST    /reportProblem              controllers.SMS.reportProblem
POST    /logEvent                   controllers.MachineController.logEvent
GET		/activityLog				controllers.MachineController.activityLog(machineId)
GET		/activityLogData			controllers.MachineController.activityLogData(machineId,startDate,endDate)
GET     /sales                      controllers.Checkout.sales()
GET     /salesProduct               controllers.Checkout.salesProduct()
GET     /productSalesList           controllers.ProductController.getSales(sku)
GET     /productSales               controllers.ProductController.productSales(sku)
GET     /salesJson                  controllers.Checkout.salesJson()
GET     /productSaleCount           controllers.Checkout.productSaleCount(sku)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /productImage/:file         controllers.FileService.getProductImage(file: String)
GET     /brandLogo/:file            controllers.FileService.getBrandLogo(file: String)