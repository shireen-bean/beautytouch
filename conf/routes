# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /login                      controllers.Application.login()
GET     /product                    controllers.Product.product()
GET     /productJson                controllers.Product.productJson(sku)
POST    /postProductImage           controllers.Product.postProductImage()
POST    /postProduct		        controllers.Product.postProduct()
GET     /productList                controllers.ProductList.productList()
GET     /productListJson            controllers.ProductList.productListJson()
GET     /logout                     controllers.Application.logout()
GET     /dashboard                  controllers.Dashboard.dashboard()
GET     /machine                    controllers.Machine.machine()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
